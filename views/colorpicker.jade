extends layout

block styles
    link(rel='stylesheet', href='/stylesheets/bootstrap.colorpickersliders.min.css')
block content
    h1 #{title}
    div(class='form-group')
        label(for='colorinput')='Color'
        div(class='pick-a-color', id='colorinput')
    button(class='btn btn-warning btn-lg', id='randomize')
        span(class='glyphicon glyphicon-star')
    button(class='btn btn-info btn-lg', id='colorandom')
        span(class='glyphicon glyphicon-random')

    
block scripts
    script(src='/javascripts/tinycolor.min.js')
    script(src='/javascripts/bootstrap.colorpickersliders.min.js')
    script(src='/javascripts/pages/colorpicker.js')